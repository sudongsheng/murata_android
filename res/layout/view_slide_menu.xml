<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white">
    <RelativeLayout android:id="@+id/slide_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="144dp"
                    android:paddingLeft="17dp"
                    android:paddingTop="17dp"
                    android:background="@color/theme">
        <ImageView
                android:id="@+id/headImg"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/default_head_img"/>
        <ImageView android:id="@+id/head_img_circle"
                   android:layout_width="110dp"
                   android:layout_height="110dp"
                   android:background="@drawable/head_img_circle"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/head_img_circle" android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true">
            <TextView android:id="@+id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:textSize="24sp"/>
            <TextView android:id="@+id/userType"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/personal_user_type"
                      android:layout_below="@id/name"
                      android:textSize="14sp"
                      android:text="@string/owner"/>
        </RelativeLayout>

    </RelativeLayout>
    <ListView
            android:id="@+id/slide_menu"
            android:divider="@color/login_line"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:listSelector="@drawable/selectors_slidemenu_list"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>

